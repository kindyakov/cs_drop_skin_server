# ==============================================
# DATABASE
# ==============================================
DATABASE_URL=postgresql://username:password@localhost:5432/cs_cases

# ==============================================
# JWT AUTHENTICATION
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# ==============================================
# STEAM OAUTH
# ==============================================
STEAM_API_KEY=your-steam-api-key-from-steamcommunity.com
STEAM_RETURN_URL=http://localhost:5000/auth/steam/return

# ==============================================
# VK OAUTH
# ==============================================
VK_APP_ID=your-vk-app-id
VK_APP_SECRET=your-vk-app-secret
VK_CALLBACK_URL=http://localhost:5000/auth/vk/callback

# ==============================================
# YOOKASSA PAYMENT GATEWAY
# ==============================================
YOOKASSA_SHOP_ID=your-yookassa-shop-id
YOOKASSA_SECRET_KEY=your-yookassa-secret-key

# ==============================================
# MARKET.CSGO.COM API
# ==============================================
MARKET_CS_API_KEY=your-market-csgo-api-key

# ==============================================
# SERVER CONFIGURATION
# ==============================================
NODE_ENV=development
PORT=5000
CORS_ORIGIN=http://localhost:3000

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=info

NAME_CACHE_FILE=skins-cache.json